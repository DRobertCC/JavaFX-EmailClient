<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.web.WebView?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.drobert.controller.MainWindowController">
   <children>
      <MenuBar layoutX="-1.0" prefHeight="25.0" prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
                  <MenuItem mnemonicParsing="false" text="Open" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#optionsAction" text="Options" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TreeView fx:id="emailsTreeView" layoutY="25.0" prefHeight="575.0" prefWidth="220.0" />
      <TableView fx:id="emailsTableView" layoutX="220.0" layoutY="25.0" prefHeight="200.0" prefWidth="580.0">
        <columns>
          <TableColumn prefWidth="111.0" text="Sender" />
          <TableColumn prefWidth="82.0" text="Subject" />
            <TableColumn prefWidth="170.0" text="Recipient" />
            <TableColumn prefWidth="116.0" text="Size" />
            <TableColumn prefWidth="99.0" text="Date" />
        </columns>
      </TableView>
      <WebView fx:id="emailWebView" layoutX="220.0" layoutY="225.0" prefHeight="375.0" prefWidth="580.0" />
   </children>
</AnchorPane>
